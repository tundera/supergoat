{
  "name": "monorepo",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/tundera/monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/tundera/monorepo"
  },
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera"
  },
  "keywords": [
    "monorepo",
    "workspace",
    "nextjs"
  ],
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/*",
      "services/*",
      "tools/*",
      "sites/*",
      "static/*",
      "db"
    ]
  },
  "scripts": {
    "clean": "ultra -r --silent clean",
    "cli:link": "yarn workspace @monorepo/cli link",
    "cli:unlink": "yarn workspace @monorepo/cli unlink",
    "test": "run-s 'test:*'",
    "test:unit": "ultra -r --silent test:unit",
    "fix:staged-files": "ultra -r --silent fix:staged-files",
    "fix:all-files": "ultra -r --silent fix:all-files",
    "changeset": "changeset",
    "release": " yarn build && changeset publish",
    "deps:check": "ultra -r --silent npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "ultra -r --silent npm-check-updates -u --deep --dep prod,dev,optional",
    "typecheck": "ultra -r --silent typecheck",
    "lint": "ultra -r --silent lint",
    "build": "yarn examples:build && tsc",
    "examples:build": "ultra -r --silent --filter 'examples/*' build",
    "examples:clean": "ultra -r --silent --filter 'examples/*' clean",
    "packages:watch": "ultra -r --silent --filter 'packages/*' watch",
    "packages:build": "ultra -r --silent --filter 'packages/*' build",
    "packages:lint": "ultra -r --silent --filter 'packages/*' lint",
    "packages:typecheck": "ultra -r --silent --filter '@monorepo/*' typecheck",
    "packages:clean": "ultra -r --silent --filter '@monorepo/*' clean",
    "prepare": "is-ci || husky install && patch-package && manypkg check",
    "docker:up": "docker-compose up -d",
    "docker:up:database": "docker-compose up -d database",
    "docker:down": "docker-compose down"
  },
  "resolutions": {
    "react": "18.0.0-alpha-cb8a50619-20210909",
    "react-dom": "18.0.0-alpha-cb8a50619-20210909"
  },
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "7.15.0",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.15.0",
    "@changesets/changelog-github": "0.4.1",
    "@changesets/cli": "2.17.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@nrwl/cli": "12.9.0",
    "@nrwl/devkit": "12.9.0",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/tao": "12.9.0",
    "@nrwl/workspace": "12.9.0",
    "@swc/core": "1.2.87",
    "@swc/helpers": "0.2.13",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/dotenv-flow": "3.2.0",
    "@types/eslint": "^7.28.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/node": "16.9.1",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "chalk": "4.1.2",
    "change-case": "4.1.2",
    "dotenv": "10.0.0",
    "dotenv-expand": "5.1.0",
    "dotenv-flow": "3.2.0",
    "esbuild-register": "3.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jest-dom": "3.9.2",
    "eslint-plugin-jest-formatting": "^3.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "execa": "5.1.1",
    "find-yarn-workspace-root": "2.0.0",
    "husky": "^7.0.2",
    "hygen": "6.1.0",
    "is-ci": "3.0.0",
    "jest": "^27.1.1",
    "lint-staged": "11.1.2",
    "npm-check-updates": "11.8.5",
    "npm-run-all": "4.1.5",
    "nx": "12.9.0",
    "ora": "6.0.1",
    "patch-package": "6.4.7",
    "prettier": "2.4.0",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "shell-quote": "1.7.2",
    "ts-jest": "^27.0.5",
    "ts-node": "10.2.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "3.11.0",
    "tslib": "^2.3.1",
    "typescript": "4.4.3",
    "ultra-runner": "3.10.5",
    "wsrun": "5.2.4"
  },
  "packageManager": "yarn@3.0.2"
}
