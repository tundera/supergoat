{
  "name": "nextjs-monorepo-example",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/belgattitude/nextjs-monorepo-example",
  "repository": {
    "type": "git",
    "url": "https://github.com/belgattitude/nextjs-monorepo-example"
  },
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera"
  },
  "keywords": [
    "example",
    "workspace",
    "nextjs",
    "next-transpile-modules"
  ],
  "workspaces": [
    "apps/*",
    "packages/*",
    "static/*"
  ],
  "scripts": {
    "clean": "wsrun clean",
    "build": "wsrun -m -r --stages build",
    "test": "run-s 'test:*'",
    "test:unit": "wsrun test:unit",
    "fix:staged-files": "wsrun fix:staged-files",
    "fix:all-files": "wsrun fix:all-files",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "deps:check": "npm-check-updates --configFileName ncurc.yml --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates --configFileName ncurc.yml -u --deep --dep prod,dev,optional",
    "typecheck": "wsrun typecheck",
    "lint": "wsrun lint",
    "check:install": "yarn dlx @yarnpkg/doctor .",
    "share:static:symlink": "wsrun -p '*-app' share:static:symlink",
    "share:static:hardlink": "wsrun -p '*-app' share:static:hardlink",
    "apps:build": "wsrun -p '*-app' build",
    "apps:clean": "wsrun -p '*-app' clean",
    "packages:build": "wsrun -p '@monorepo/*' build",
    "packages:lint": "wsrun -p '@monorepo/*' lint",
    "packages:typecheck": "wsrun -p '@monorepo/*' typecheck",
    "packages:clean": "wsrun -p '@monorepo/*' clean",
    "postinstall": "is-ci || yarn husky install",
    "docker:up": "docker-compose up -d",
    "docker:up:database": "docker-compose up -d database",
    "docker:down": "docker-compose down",
    "docker:clean": "docker container rm -f $(docker container ls -qa) && docker image rm -f $(docker image ls -q)",
    "?clear:node_modules": "remove all node_modules folders present under the root",
    "clear:node_modules": "rimraf '**/node_modules'"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.0",
    "@changesets/cli": "2.16.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "husky": "7.0.1",
    "is-ci": "3.0.0",
    "lint-staged": "11.1.1",
    "npm-check-updates": "11.8.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rimraf": "3.0.2",
    "shell-quote": "1.7.2",
    "wsrun": "^5.2.4"
  },
  "engines": {
    "node": ">=14",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@1.22.10"
}
