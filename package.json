{
  "name": "root",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/belgattitude/nextjs-monorepo-example",
  "repository": {
    "type": "git",
    "url": "https://github.com/belgattitude/nextjs-monorepo-example"
  },
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera"
  },
  "keywords": [
    "example",
    "workspace",
    "nextjs",
    "next-transpile-modules"
  ],
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "services/*",
      "static/*",
      "scripts"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/@prisma",
      "**/@prisma/**"
    ]
  },
  "scripts": {
    "clean": "wsrun clean",
    "build": "ultra -r build",
    "test:unit": "ultra -r --concurrency 15 test:unit",
    "fix:staged-files": "ultra -r fix:staged-files",
    "fix:all-files": "ultra -r fix:all-files",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "deps:check": "npm-check-updates --configFileName ncurc.yml --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates --configFileName ncurc.yml -u --deep --dep prod,dev,optional",
    "typecheck": "ultra typecheck",
    "lint": "wsrun lint",
    "share:static:symlink": "ultra --filter \"*-app\" share:static:symlink",
    "share:static:hardlink": "ultra --filter \"*-app\" share:static:hardlink",
    "apps:build": "ultra --filter \"*-app\" build",
    "apps:clean": "ultra --filter \"*-app\" clean",
    "packages:build": "ultra --filter \"@monorepo/*\" build",
    "packages:lint": "ultra --filter \"@monorepo/*\" lint",
    "packages:typecheck": "ultra --filter \"@monorepo/*\" typecheck",
    "packages:clean": "ultra --filter \"@monorepo/*\" clean",
    "postinstall": "is-ci || yarn husky install",
    "docker:up": "docker-compose up -d",
    "docker:up:database": "docker-compose up -d database",
    "docker:down": "docker-compose down",
    "docker:clean": "docker container rm -f $(docker container ls -qa) && docker image rm -f $(docker image ls -q)",
    "?clear:node_modules": "remove all node_modules folders present under the root",
    "clear:node_modules": "rimraf '**/node_modules'"
  },
  "resolutions": {
    "react": "npm:react@alpha",
    "react-dom": "npm:react-dom@alpha"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.0",
    "@changesets/cli": "2.16.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "husky": "7.0.1",
    "is-ci": "3.0.0",
    "lint-staged": "11.1.1",
    "npm-check-updates": "11.8.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rimraf": "3.0.2",
    "shell-quote": "1.7.2",
    "ultra-runner": "^3.10.5",
    "wsrun": "^5.2.4"
  },
  "engines": {
    "node": ">=14",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@1.22.10"
}
