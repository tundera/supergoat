{
  "name": "root",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/tundera/monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/tundera/monorepo"
  },
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera"
  },
  "keywords": [
    "example",
    "workspace",
    "nextjs",
    "next-transpile-modules"
  ],
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "services/*",
      "sites/*",
      "static/*",
      "scripts",
      "db"
    ],
    "nohoist": [
      "**/@prisma",
      "**/@prisma/**",
      "**/@paljs",
      "**/@paljs/**"
    ]
  },
  "scripts": {
    "clean": "ultra -r clean && ultra -r --root rimraf node_modules yarn-error.log && rimraf yarn.lock",
    "test": "run-s 'test:*'",
    "test:unit": "ultra -r test:unit",
    "fix:staged-files": "ultra -r fix:staged-files",
    "fix:all-files": "ultra -r fix:all-files",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "deps:check": "npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates -u --deep --dep prod,dev,optional",
    "typecheck": "ultra -r typecheck",
    "lint": "ultra -r lint",
    "share:static:symlink": "ultra -r --filter 'apps/*' share:static:symlink",
    "share:static:hardlink": "ultra -r --filter 'apps/*' share:static:hardlink",
    "apps:build": "ultra -r --filter 'apps/*' build",
    "apps:clean": "ultra -r --filter 'apps/*' clean",
    "packages:build": "ultra -r --filter 'packages/*' build",
    "packages:lint": "ultra -r --filter 'packages/*' lint",
    "packages:typecheck": "ultra -r --filter 'packages/*' typecheck",
    "packages:clean": "ultra -r --filter 'packages/*' clean",
    "postinstall": "is-ci || yarn husky install",
    "docker:up": "docker-compose up -d",
    "docker:up:database": "docker-compose up -d database",
    "docker:down": "docker-compose down"
  },
  "resolutions": {
    "react": "18.0.0-alpha-6f3fcbd6f-20210730",
    "react-dom": "18.0.0-alpha-6f3fcbd6f-20210730"
  },
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@babel/preset-env": "7.14.9",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@changesets/changelog-github": "0.4.0",
    "@changesets/cli": "2.16.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@swc/core": "^1.2.71",
    "@swc/helpers": "^0.2.12",
    "@types/eslint": "^7",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "dotenv-flow": "^3.2.0",
    "eslint": "^7.32.0",
    "husky": "7.0.1",
    "inspx": "^0.0.1-alpha.6",
    "is-ci": "3.0.0",
    "lint-staged": "11.1.1",
    "npm-check-updates": "11.8.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rimraf": "3.0.2",
    "shell-quote": "1.7.2",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "tslib": "^2.3.0",
    "ultra-runner": "^3.10.5"
  },
  "engines": {
    "node": ">=14",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  }
}
