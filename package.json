{
  "name": "root",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/tundera/monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/tundera/monorepo"
  },
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera"
  },
  "keywords": [
    "example",
    "workspace",
    "nextjs",
    "next-transpile-modules"
  ],
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/*",
      "services/*",
      "sites/*",
      "static/*",
      "scripts",
      "db"
    ],
    "nohoist": [
      "**/@prisma",
      "**/@prisma/**",
      "**/@paljs",
      "**/@paljs/**"
    ]
  },
  "scripts": {
    "clean": "ultra -r clean",
    "test": "run-s 'test:*'",
    "test:unit": "ultra -r test:unit",
    "fix:staged-files": "ultra -r fix:staged-files",
    "fix:all-files": "ultra -r fix:all-files",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "deps:check": "npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates -u --deep --dep prod,dev,optional",
    "typecheck": "ultra -r typecheck",
    "lint": "ultra -r lint",
    "share:static:symlink": "ultra -r --filter '*-app' share:static:symlink",
    "share:static:hardlink": "ultra -r --filter '*-app' share:static:hardlink",
    "examples:build": "ultra -r --filter '*-example' build",
    "examples:clean": "ultra -r --filter '*-example' clean",
    "packages:build": "ultra -r --filter '@monorepo/*' build",
    "build": "yarn packages:build && yarn examples:build",
    "packages:lint": "ultra -r --filter '@monorepo/*' lint",
    "packages:typecheck": "ultra -r --filter '@monorepo/*' typecheck",
    "packages:clean": "ultra -r --filter '@monorepo/*' clean",
    "postinstall": "is-ci || yarn husky install",
    "docker:up": "docker-compose up -d",
    "docker:up:database": "docker-compose up -d database",
    "docker:down": "docker-compose down"
  },
  "resolutions": {
    "react": "18.0.0-alpha-b9934d6db-20210805",
    "react-dom": "18.0.0-alpha-b9934d6db-20210805"
  },
  "dependencies": {
    "find-yarn-workspace-root": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.15.0",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.15.0",
    "@changesets/changelog-github": "0.4.0",
    "@changesets/cli": "2.16.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@swc/core": "^1.2.76",
    "@swc/helpers": "^0.2.13",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/dotenv-flow": "3.1.1",
    "@types/eslint": "^7",
    "@types/eslint-plugin-prettier": "^3",
    "@types/testing-library__jest-dom": "^5",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "dotenv-flow": "^3.2.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jest-formatting": "^3.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "7.0.1",
    "is-ci": "3.0.0",
    "jest": "^27.0.6",
    "lint-staged": "11.1.2",
    "npm-check-updates": "11.8.3",
    "npm-run-all": "4.1.5",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "rimraf": "3.0.2",
    "shell-quote": "1.7.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "3.10.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5",
    "ultra-runner": "^3.10.5"
  }
}
