{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "target": "esnext",
      "allowJs": true,
      "module": "esnext"
    },
    "moduleTypes": {
      "bin": "esm"
    },
    "pretty": true,
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental",
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "importHelpers": true,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.js", "bin/run"]
}
