{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "lib": ["esnext"],
    "module": "ES2020",
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@monorepo/core/*": ["../../../packages/core/src/*"],
      "@monorepo/core": ["../../../packages/core/src/index"]
    }
  },
  // Prisma seed requires to use commonjs
  // @link https://github.com/TypeStrong/ts-node#via-tsconfigjson-recommended
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true
    }
  },
  "exclude": ["node_modules"],
  "include": ["prisma/**/*.ts", "src/**/*.ts"]
}
