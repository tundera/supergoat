{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "pretty": true,
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental",
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@monorepo/components": ["packages/components/src/index.ts"],
      "@monorepo/components/*": ["packages/components/src/*"],
      "@monorepo/db": ["packages/db/src/index.ts"],
      "@monorepo/db/*": ["packages/db/src/*"],
      "@monorepo/graphql": ["packages/graphql/src/index.ts"],
      "@monorepo/graphql/*": ["packages/graphql/src/*"],
      "@monorepo/scripts/*": ["packages/scripts/*"],
      "@monorepo/theme": ["packages/theme/src/index.ts"],
      "@monorepo/theme/*": ["packages/theme/src/*"]
    }
  },
  "exclude": ["node_modules", ".yarn"]
}
